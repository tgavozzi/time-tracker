@using Project.Web.Models;
@model List<TimeCard>
@{
    ViewBag.Title = "TimeCardHistoryResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Time Clock Details</h2>

<div class="container">
    @foreach (TimeCard card in Model)
    {
        <table>
            <tr>
                <th>Name</th>
                <th>Project</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Total Hours</th>
                <th>Notes</th>
            </tr>
            <tr>
                <td>@card.Username</td>
                <td>@card.Project</td>
                <td>@card.StartDate</td>
                <td>@card.EndDate</td>
                <td>@((card.EndDate - card.StartDate))</td>
                <td>@card.Notes</td>
            </tr>
        </table>
    }
</div>